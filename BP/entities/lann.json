{
    "format_version": "1.16.0",
    "minecraft:entity": {
        "description": {
            "identifier": "enscraft:lann",
            "is_summonable": true,
            "is_spawnable": true,
            "is_experimental": true,
            "animations": {
                "summon": "animation.summon",
                "angry": "animation.angry",
                "basic": "controller.animation.lann.basic"
            },
            "scripts": {
                "animate": [
                    "basic"
                ]
            }
        },
        "components": {
            "minecraft:physics": {},
            "minecraft:pushable": {
                "is_pushable": true,
                "is_pushable_by_piston": true
            },
            "minecraft:experience_reward": {
                "on_death": "query.last_hit_by_player ? 15 : 0"
            },
            "minecraft:is_hidden_when_invisible": {},
            "minecraft:type_family": {
                "family": [
                    "ens",
                    "monster",
                    "mob"
                ]
            },
            "minecraft:health": {
                "value": 20,
                "max": 20
            },
            "minecraft:breathable": {
                "total_supply": 15,
                "suffocate_time": 0
            },
            "minecraft:collision_box": {
                "width": 0.6,
                "height": 2
            },
            "minecraft:behavior.hurt_by_target": {
                "priority": 1
            },
            "minecraft:hurt_on_condition": {
                "damage_conditions": [
                    {
                        "filters": {
                            "test": "in_lava",
                            "subject": "self",
                            "operator": "==",
                            "value": true
                        },
                        "cause": "lava",
                        "damage_per_tick": 4
                    }
                ]
            },
            "minecraft:damage_sensor": {
                "triggers": {
                    "on_damage": {
                        "target": "self",
                        "filters": {
                            "all_of": [
                                {
                                    "test": "has_damage",
                                    "value": "fatal"
                                }
                            ]
                        },
                        "event": "enscraft:lann_death"
                    },
                    "deals_damage": false,
                    "cause": "fatal"
                }
            },
            "minecraft:on_target_acquired": {
                "event": "enscraft:become_angry",
                "target": "self"
            }
        },
        "component_groups": {
            "enscraft:movable": {
                "minecraft:movement": {
                    "value": 0.3
                },
                "minecraft:movement.basic": {},
                "minecraft:jump.static": {},
                "minecraft:behavior.float": {
                    "priority": 0
                },
                "minecraft:behavior.random_stroll": {
                    "priority": 3,
                    "speed_multiplier": 0.7
                },
                "minecraft:behavior.look_at_player": {
                    "priority": 4,
                    "look_distance": 5
                },
                "minecraft:behavior.random_look_around": {
                    "priority": 7
                },
                "minecraft:conditional_bandwidth_optimization": {},
                "minecraft:navigation.walk": {
                    "can_path_over_water": true,
                    "avoid_damage_blocks": true
                },
                "minecraft:follow_range": {
                    "value": 64
                }
            },
            "enscraft:angry": {
                "minecraft:angry": {},
                "minecraft:on_target_acquired": {},
                "minecraft:boss": {
                    "hud_range": 15,
                    "name": "Lann"
                },
                "minecraft:behavior.melee_attack": {
                    "priority": 2,
                    "track_target": true
                },
                "minecraft:attack": {
                    "damage": 3
                },
                "minecraft:behavior.nearest_attackable_target": {
                    "priority": 2,
                    "must_see": false,
                    "reselect_targets": true,
                    "within_radius": 16.0,
                    "entity_types": [
                        {
                            "filters": {
                                "any_of": [
                                    {
                                        "test": "is_family",
                                        "subject": "other",
                                        "value": "player"
                                    },
                                    {
                                        "test": "is_family",
                                        "subject": "other",
                                        "value": "snowgolem"
                                    },
                                    {
                                        "test": "is_family",
                                        "subject": "other",
                                        "value": "irongolem"
                                    }
                                ]
                            },
                            "max_dist": 16
                        }
                    ]
                }
            },
            "enscraft:explode": {
                "minecraft:explode": {
                    "fuse_length": 0,
                    "fuse_lit": true,
                    "power": 1,
                    "causes_fire": false,
                    "breaks_blocks": false,
                    "destroy_affected_by_griefing": false
                }
            },
            "enscraft:death": {
                "minecraft:is_stunned": {},
                "minecraft:timer": {
                    "looping": true,
                    "time": 3,
                    "time_down_event": {
                        "event": "enscraft:lann_explode"
                    }
                }
            }
        },
        "events": {
            "minecraft:entity_spawned": {
                "add": {
                    "component_groups": [
                        "enscraft:movable"
                    ]
                }
            },
            "enscraft:lann_death": {
                "add": {
                    "component_groups": [
                        "enscraft:death"
                    ]
                },
                "remove": {
                    "component_groups": [
                        "enscraft:movable",
                        "enscraft:angry"
                    ]
                }
            },
            "enscraft:lann_explode": {
                "add": {
                    "component_groups": [
                        "enscraft:explode"
                    ]
                }
            },
            "enscraft:become_angry": {
                "add": {
                    "component_groups": [
                        "enscraft:angry"
                    ]
                }
            }
        }
    }
}